<open-setting 
  title="系统授权" 
  content='我们要授权请你同意!' 
  cancelText='取消' 
  confirmText='授权' bind:cancelEvent="cancelEvent"     
  bind:confirmEvent="confirmEvent" 
  isShowOpenSetting="{{isShowOpenSetting}}"
  scope="scope.userLocation"
>
</open-setting>


<view class="desc_view">
  第一种方式
</view>
<button bindtap="getLocationOne">第一种套路 获取位置</button>


<view class="desc_view">
  第二种方式
</view>
<button wx:if="{{isLocationTwo}}" open-type="openSetting" bindopensetting="handleLocationTwoSetting">授权保存</button>
<button wx:else bindtap="getLocationTwo">第二种套路 获取位置</button>


<view class="desc_view">
  第三种方式
</view>

<button bindtap="getLocationTherr">第三种套路 获取位置</button>

<view class="desc_view">
  // 下面 <text class='small_title'> 查看位置、</text> <text class='small_title'>打开地图选择位置、</text> 都可结合上述三种方式获取
</view>

<view class="desc_view">
  /****  查看位置 ****/
</view>
<button bindtap="openLocation">​使用微信内置地图查看位置。
  wx.openLocation</button>


<view class="desc_view">
  /****  打开地图选择位置 ****/
</view>
<button bindtap="chooseLocation">​使用微信内置地图查看位置。
  wx.openLocation</button>
